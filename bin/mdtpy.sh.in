#!/bin/sh

TOPDIR=@TOPDIR@
MODPY=@MODPY@
PATHSEP=@PATHSEP@

LLP=${TOPDIR}/src
if test -z "${LD_LIBRARY_PATH}"; then
  LD_LIBRARY_PATH=${LLP}
else
  LD_LIBRARY_PATH=${LD_LIBRARY_PATH}${PATHSEP}${LLP}
fi
if test -z "${DYLD_LIBRARY_PATH}"; then
  DYLD_LIBRARY_PATH=${LLP}
else
  DYLD_LIBRARY_PATH=${DYLD_LIBRARY_PATH}${PATHSEP}${LLP}
fi
if test -z "${LIBPATH}"; then
  LIBPATH=${LLP}
else
  LIBPATH=${LIBPATH}${PATHSEP}${LLP}
fi

PP=${TOPDIR}/pyext
if test -z "${PYTHONPATH}"; then
  PYTHONPATH=${PP}
else
  PYTHONPATH="${PYTHONPATH}${PATHSEP}${PP}"
fi
export LD_LIBRARY_PATH DYLD_LIBRARY_PATH PYTHONPATH LIBPATH
exec ${MODPY} "$@"
